{
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "lib/FileSaver.js",
        "lib/xlsx.core.min.js",
        "lib/jquery.min.js",
        "content_script.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "https://www.youtube.com/*",
    "storage"
  ],
  "description": "Extracts YouTube comments for exporting to XLS, CSV, or JSON",
  "homepage_url": "http://github.com/deftx/youtube-comment-exporter",
  "icons": {
    "48": "img/yte48.png",
    "128": "img/yte128.png"
  },
  "page_action": {
    "default_title": "Export comments",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "name": "YouTube Comment Exporter",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.0"
}
